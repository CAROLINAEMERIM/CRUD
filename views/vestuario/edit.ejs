<h1>Editar vestuario</h1>
<form action="/vestuario/<%= vestuario.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= vestuario.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="<%= vestuario.descricao %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>